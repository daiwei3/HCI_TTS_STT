{
    "name": "TTS STT Extension",
    "version": "1.0",
    "description": "HCI TTS STT Project",
    "manifest_version": 2,
    "permissions": [
        "contextMenus",
        "tabs",
        "http://*/*",
        "https://*/*",
        "activeTab"
    ],
    "background": {
        "persistent": false,
        "scripts": ["TTS.js"]
    },



    "browser_action": {
        "default_popup": "menu.html"
    }


}
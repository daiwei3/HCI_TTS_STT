{
    "name": "TTS STT Extension",
    "version": "1.0",
    "description": "HCI TTS STT Project",
    "manifest_version": 2,
    "permissions": [
        "contextMenus",
        "tabs",
        "http://*/*",
        "https://*/*",
        "activeTab"
    ],
    "background": {
        "persistent": true,
        "page": "backgroud.html"
    },
    "browser_action": {
        "default_title": "TTS STT Extension",
        "default_popup": "popup.html"
    }


}
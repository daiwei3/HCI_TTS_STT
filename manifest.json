{
    "name": "TTS STT Extension",
	"browser_action": {
		"default_icon": {
			"48": "icons/48.png",
			"128": "icons/128.png"
		},
		"default_popup": "js/option.html",
		"default_title": "HCI Project"
    },
    "icons": {
		"48": "icons/48.png",
		"128": "icons/128.png"
    },
    "version": "1.0",
    "description": "Extension for webpage TTS&STT",
    "manifest_version": 2,
    "permissions": [
        "contextMenus",
		"tabs",
		"webRequest",
		"storage",
		"activeTab",
		"downloads"
    ],
    "background": {
        "scripts": ["background/background.js"]
    }
}